<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dip"
    android:background="@drawable/bgr_screen"
    tools:context="com.example.asaem.dadm.MainActivity">

    <ImageView android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo_white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <Button android:id="@+id/btn_setup"
        android:layout_width="220dip"
        android:layout_height="45dip"
        android:background="@color/colorBoldOlive"
        android:layout_below="@+id/img_logo"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:text="@string/setup_macro"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"/>

    <Button android:id="@+id/btn_delete"
        android:layout_width="220dip"
        android:layout_height="45dip"
        android:background="@color/colorBoldOlive"
        android:layout_below="@+id/btn_setup"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:text="@string/delete_macro"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"/>

    <Button android:id="@+id/btn_check"
        android:layout_width="220dip"
        android:layout_height="45dip"
        android:background="@color/colorBoldOlive"
        android:layout_below="@+id/btn_delete"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:text="@string/check_message"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"/>

    <Button android:id="@+id/btn_inputReport"
        android:layout_width="220dip"
        android:layout_height="45dip"
        android:background="@color/colorBoldOlive"
        android:layout_below="@+id/btn_check"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:text="@string/input_report"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"/>

</RelativeLayout>
